<div class="top-main">
    <h1> posts/index </h1>

    <div class="targets">
        <p>目標 <%= @targets.size %>件</p>
        <% @targets.each do |target| %>
        <div class="target">
            <ul>
                <li>
                <h4><%=link_to(" #{target.date} の目標","/posts/#{target.id}") %></h4>
                腕立て：<%= target.push_up %> <br>
                腹筋： <%= target.sit_up %> <br>
                3000m走： <%= target.run %> <br>
                </li>
            </ul>
        </div>
        <% end %>
    </div>
    <div class="records">
        <p>記録 <%= @records.size %>件</p>
        <% @records.each do |record| %>
        <div class="record">
            <ul>
                <li>
                <h4> <%= record.date %> の記録</h4>
                腕立て： <%= record.push_up %><br>
                腹筋：<%= record.sit_up %><br>
                3000m走：<%= record.run %><br>
                </li>
            </ul>
        </div>
        <% end %>
    </div>
</div>