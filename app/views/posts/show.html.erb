<div class="posts-main">
    <div class="container">
    <h2><%= @msg %>の詳細</h2>
    <div class="card record-edit-card">
        <div class="card-body">
            <h4 class="card-title">
                <%= @post.date%> の<%= @msg %>
            </h4>
            <div class="container record-edit-container">
                <div class="row">
                    <div class="col-5">腕立て：</div>
                    <div class="col-7"><%= @post.push_up %>回</div>
                </div>
                <div class="row">
                    <div class="col-5">腹筋：</div>
                    <div class="col-7"><%= @post.sit_up %>回</div>
                </div>
                <div class="row">
                    <div class="col-5">3000m走：</div>
                    <div class="col-7"><%= @post.run_min %>分<%= @post.run_sec %>秒</div>
                </div>
            </div>
            <%= link_to("修正する","/posts/#{@post.id}/edit", class: "card-link")%>
            <%= link_to("削除する","/posts/#{@post.id}/destroy",{method: "post", class: "card-link"})%>
        </div>
    </div>

    <br>
    <%= link_to("戻る","/users/#{@post.user_id}", class: "btn btn-secondary") %>
    </div>
</div>