
<div class="user-main">
    <div class="container">
        <br>
        <h2>ログイン</h2>

        <% if @error_message %>
            <div class="form-error">
                <%= @error_message %>
            </div>
        <% end %>
        <div class="form-body">
        <%= form_tag("/login") do %>
            <div class="form-group">
                <div class="row row-name">
                    <div class="col-4 col-label">
                        <label>名 前：</label>
                    </div>
                    <div class="col-8">
                        <input name="name" type="text" value="<%= @name %>">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-4 col-label">
                        <label>ﾊﾟｽﾜｰﾄﾞ：</label>
                    </div>
                    <div class="col-8">
                        <input name="password" type="password" value="<%= @password %>">
                    </div>
                </div>
            </div>
        <input type="submit" value="ログイン" class="btn btn-primary">
        <% end %>
        </div>
    </div>
</div>