<div class="user-main">
    <div class="container">
        <h2>新規ユーザー登録</h2>

        <% @user.errors.full_messages.each do|message| %>
            <div class="form-error">
                <%= message %>
            </div>
        <% end %>
        <div class="form-body">
        <%= form_tag("/users/create") do %>

        <div class="form-group">
            <div class="row">
                <div class="col-4 col-label">
                    <label>名 前：</label>
                </div>
                <div class="col-8">
                    <input type="text" name="name" value="" placeholder="久里浜　太郎">
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-4 col-label">
                    <label>ﾊﾟｽﾜｰﾄﾞ：</label>
                </div>
                <div class="col-8">
                    <input type="password" name="password" value="">
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-4 col-label">
                    <label>年 齢：</label>
                </div>
                <div class="col-8">
                    <input type="number" name="age" value="" placeholder="20">歳
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-4 col-label">
                    <label>身 長：</label>
                </div>
                <div class="col-8">
                    <input type="number" name="height" value="" placeholder="170">cm
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-4 col-label">
                    <label>体 重：</label>
                </div>
                <div class="col-8">
                    <input type="number" name="weight" value="" placeholder="60">kg
                </div>
            </div>
        </div>
        <input type="submit" value="登　録" class="btn btn-primary">
        <% end %>
        </div>

        <%= link_to("戻る","/", class: "btn btn-secondary") %>

    </div>
</div>